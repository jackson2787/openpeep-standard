{
  "$id": "https://openpeep.org/schemas/2025-08/rpeep.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Residential Personal Emergency Evacuation Plan (RPEEP)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "rpeep_id": { "type": "string", "format": "uuid" },
    "resident_profile": { "$ref": "https://openpeep.org/schemas/2025-08/common/person_profile.schema.json" },
    "residence_location": { "$ref": "https://openpeep.org/schemas/2025-08/common/address.schema.json" },
    "consent": { "$ref": "https://openpeep.org/schemas/2025-08/common/consent.schema.json" },
    "person_ees": { "$ref": "https://openpeep.org/schemas/2025-08/ees.schema.json#/$defs/person_statement" },
    "distribution": {
      "type": "array",
      "description": "Who this RPEEP is shared with",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "recipient_role": { "type": "string", "enum": ["resident","landlord","managing_agent","FRS","other"] },
          "delivery_method": { "type": "string", "enum": ["printed","email","portal","app"] },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["recipient_role", "delivery_method"]
      }
    },
    "references": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "peep_id": { "type": "string" },
        "pcfra_id": { "type": "string" },
        "building_statement_ees_id": { "type": "string" }
      }
    },
    "review": { "$ref": "https://openpeep.org/schemas/2025-08/common/review.schema.json" }
  },
  "required": ["rpeep_id", "resident_profile", "residence_location", "consent", "review"]
}