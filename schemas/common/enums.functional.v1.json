{
  "$id": "https://spec.openpeep.org/schemas/common/enums.functional.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Functional Capability Enums (v1)",
  "description": "Shared enumerations for functional evacuation capability across PCFRA, PEEP, and RPEEP. Standardises categories for mobility, sensory, cognition, communication, night response, equipment, and assistance.",
  "type": "object",
  "properties": {
    "mobility_transfer": {
      "type": "string",
      "enum": [
        "independent",
        "needs_assist_1",
        "needs_assist_2",
        "hoist"
      ]
    },
    "stair_tolerance": {
      "type": "string",
      "enum": [
        "can_use_stairs",
        "stairs_with_assist",
        "cannot_use_stairs"
      ]
    },
    "mobility_aid": {
      "type": "string",
      "enum": [
    "none",
    "walking_stick",
    "crutches",
    "walking_frame",
    "assisted_walking",
    "wheelchair_self",
    "wheelchair_assisted",
    "evac_chair_required"
  ]
    },
    "sensory_hearing": {
      "type": "string",
      "enum": [
        "typical",
        "reduced",
        "profound"
      ]
    },
    "sensory_vision": {
      "type": "string",
      "enum": [
        "typical",
        "low_vision",
        "blind"
      ]
    },
    "cognition_orientation": {
      "type": "string",
      "enum": [
        "typical",
        "prompts_needed",
        "cannot_follow_instructions"
      ]
    },
    "communication": {
      "type": "string",
      "enum": [
        "typical",
        "simple_language",
        "interpreter_required",
        "aac_required"
      ]
    },
    "night_response": {
      "type": "string",
      "enum": [
        "typical",
        "requires_wake_up",
        "medication_risk"
      ]
    },
    "equipment_dependency": {
      "type": "string",
      "enum": [
        "none",
        "oxygen",
        "ventilator",
        "powered_bed",
        "other"
      ]
    },
    "behavioural_risks": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "none",
          "smoking",
          "hoarding",
          "substance_use",
          "wandering"
        ]
      },
      "uniqueItems": true
    },
    "assist_required": {
      "type": "string",
      "enum": [
        "none",
        "standby",
        "assist_1",
        "assist_2",
        "team"
      ]
    },
    "equipment_needed": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "evac_chair",
          "hearing_alert",
          "visual_alert",
          "vibrating_pillow",
          "pager",
          "other"
        ]
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}