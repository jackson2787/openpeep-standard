{
  "$id": "https://openpeep.org/schemas/2025-08/common/consent.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Consent",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "consent_id": { "type": "string", "format": "uuid" },
    "subject_id": { "type": "string", "format": "uuid", "description": "Person this consent relates to" },
    "status": { "type": "string", "enum": ["given", "refused", "withdrawn"] },
    "scope": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["PCFRA", "PEEP", "RPEEP", "EES", "DataProcessing"]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "method": { "type": "string", "enum": ["written", "verbal", "digital", "implied"] },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "organisation": { "type": "string" }
      }
    },
    "recorded_at": { "type": "string", "format": "date-time" },
    "expires_at": { "type": "string", "format": "date-time" },
    "notes": { "type": "string" }
  },
  "required": ["consent_id", "subject_id", "status", "scope", "method", "recorded_at"]
}